<h1><%=header_for 'Listing states' %></h1>

<table>
  <tr>
    <th><%= title_for 'name' %></th>
    <th></th>
    <th></th>
  </tr>

<% @states.each do |state| %>
  <tr>
    <td><%= state.name %></td>
    <td><%= link_to_l 'Edit', edit_state_path(state) %></td>
    <td><%= link_to_l 'Destroy', state, confirm: destroy_prompt, method: :delete %></td>
  </tr>
<% end %>
</table>

