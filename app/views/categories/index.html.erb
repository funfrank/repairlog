<h1><%=header_for 'Listing categories' %></h1>

<table>
  <tr>
    <th><%= title_for 'name' %></th>
    <th><%= title_for 'posid' %></th>
    <th></th>
    <th></th>
  </tr>

<% @categories.each do |category| %>
  <tr>
    <td><%= category.name %></td>
    <td><%= category.posid %></td>
    <td><%= link_to_l 'Edit', edit_category_path(category) %></td>
    <td><%= link_to_l 'Destroy', category, confirm: destroy_prompt, method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

