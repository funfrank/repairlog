<h1><%=header_for 'Listing companies' %></h1>

<table>
  <tr>
    <th><%= title_for 'name' %></th>
    <th><%= title_for 'contractor' %></th>
    <th><%= title_for 'phone' %></th>
    <th></th>
    <th></th>
  </tr>

<% @companies.each do |company| %>
  <tr>
    <td><%= company.name %></td>
    <td><%= company.contractor %></td>
    <td><%= company.phone %></td>
    <td><%= link_to_l 'Edit', edit_company_path(company) %></td>
    <td><%= link_to_l 'Destroy', company, confirm: destroy_prompt, method: :delete %></td>
  </tr>
<% end %>
</table>

