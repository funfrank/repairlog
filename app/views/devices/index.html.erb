<h1><%=header_for 'Listing devices' %></h1>

<table>
  <tr>
    <th><%= title_for 'name' %></th>
    <th><%= title_for 'price' %></th>
    <th></th>
  </tr>

<% @devices.each do |device| %>
  <tr>
    <td><%= device.name %></td>
    <td><%= device.price %></td>
    <td><%= link_to_l 'Edit', edit_device_path(device) %>
    <%= link_to_l 'stock', stock_device_path(device) %>
    <%= link_to_l 'Destroy', device, confirm: destroy_prompt, method: :delete %>
    </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to_l 'New Device', new_device_path %>
